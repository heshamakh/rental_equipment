<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="rental_equipment_category_action" model="ir.actions.act_window">
        <field name="name">Equipment Category</field>
        <field name="res_model">rental.equipment.category</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="rental_equipment_category_view_tree" model="ir.ui.view">
        <field name="name">rental.equipment.category.tree</field>
        <field name="model">rental.equipment.category</field>
        <field name="arch" type="xml">
            <tree string="Equipment Categories">
                <field name="name" string="Name"/>
            </tree>
        </field>
    </record>

    <record id="rental_equipment_category_view_form" model="ir.ui.view">
        <field name="name">rental.equipment.category.view.form</field>
        <field name="model">rental.equipment.category</field>
        <field name="arch" type="xml">
            <form string="Equipment Category">
                <sheet>
                    <group>
                        <h1><field name="name" /></h1>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
